{
  "name": "excalidraw-clone",
  "private": true,
  "description": "A collaborative whiteboard application with real-time drawing and chat features",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd packages/db && pnpm prisma generate",
    "db:push": "cd packages/db && pnpm prisma db push",
    "db:studio": "cd packages/db && pnpm prisma studio",
    "clean": "turbo clean && rm -rf node_modules",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.5.2",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.17",
    "turbo": "^1.10.0"
  },
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
